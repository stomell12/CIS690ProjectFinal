<!doctype html>
<html lang="en">
  <%- include('../partials/header'); %>

  <body>

    <%- include('../partials/navbar'); %>

    <div class="container">
      <div class="row">
        <div class="col-4">
          <form method="post" action="/account/update?id=<%= user._id %>">
            <input type="hidden" name="_id" value="<%= user._id %>">
            <div class="form-group">
              <label for="firstName">First Name:</label>
              <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Enter First Name" value="<%= user.firstName %>" required maxLength="20">
            </div>
            <div class="form-group">
              <label for="lastName">Last Name:</label>
              <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Enter Last Name" value="<%= user.lastName %>" required maxLength="20">
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter Email Address" value="<%= user.email %>" required maxlength="35">
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password" required>
            </div>
            <div class="form-group">
              <label for="role">Role:</label>
              <select class="form-control" name="role" id="role" required>
                <option value="Data Entry Specialist" <%= user.role === 'Data Entry Specialist' ? 'selected' : '' %>>Data Entry Specialist</option>
                <option value="Quality Control" <%= user.role === 'Quality Control' ? 'selected' : '' %>>Quality Control</option>
                <option value="Admin" <%= user.role === 'Admin' ? 'selected' : '' %>>Admin</option>
              </select>
            </div>

            <br></br>
            <button type="submit" class="btn btn-main">Update User</button>
          </form>
        </div>
      </div>
    </div>

  </body>
</html>
